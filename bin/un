#!/bin/python2
import pynotify
import commands
import time
pynotify.init("Basic")

configpath = '/home/jonathan/.config/updates/'
packages = commands.getstatusoutput('pacman -Qu')
retVal = packages[0]
packages = packages[1]
packages = packages.strip('\n')
packagecount=len((packages.split('\n')))
notified = 0
if retVal == 0 and packagecount > 5:
    n = pynotify.Notification("Updates Availible", packages)
    n.show()
    updates = open(configpath + time.strftime("%m%d%Y")+'.txt','w+')
    updates.write(packages)
elif packagecount > 1:
    if packagecount > 2:
        n = pynotify.Notification("There are " + str(packagecount) + " updates available", packages)
    else:
        n = pynotify.Notification("There is " + str(packagecount) + " update available", packages)
    n.show()
else:
    n = pynotify.Notification("Nothing to update")
    n.show()
packages = 0
retVal = 0
packages = 0
packagecount= 0
