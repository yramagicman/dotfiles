#!/usr/bin/env python
cards = {
    'Colony': [10],
    'Dame Josephine': [2],
    'Duchy': [3],
    'Duke': [1, 1, 'duchy'],
    'Estate': [1],
    'Fairgrounds': [2, 5, 'unique'],
    'Farmland': [2],
    'Feodum': [1, 3, 'silver'],
    'Gardens': [1, 10, 'cards'],
    'Great Hall': [1],
    'Harem': [2],
    'Island': [2],
    'Nobles': [2],
    'Province': [6],
    'Silk Road': [1, 4, 'victory'],
    'Tunnel': [2],
    'Vineyard': [1, 3, 'action'],
}


def which_cards():
    default_cards_set = {
        'Duchy': cards['Duchy'],
        'Estate': cards['Estate'],
        'Province': cards['Province']
    }
    cards_set = default_cards_set
    print('Select Victory cards, the basic cards are included automatically:')

    for k in cards.keys():
        print(k)
    c = ''
    print()
    while c != 'done':
        c = input('Pick a card: ')
        if c in cards.keys():
            cards_set[c] = cards[c]
        elif c == 'done':
            break
        elif c == 'basic':
            cards_set = default_cards_set
            break
        else:
            print('Please input a card that exists')
            c = input('Pick a card: ')
    return cards_set
cards_set = which_cards()


def calculate(cards_set):
    total = 0
    cards = cards_set
    for card in cards.keys():
        if len(cards[card]) > 1:
            c = cards[card]
            multiplier = int(input('How many ' + card + ' do you have? '))
            count = input('How many groups of ' +
                          str(c[1]) + ' ' + str(c[2]) + ' do you have? ')
            total = total + ((int(count) * c[0]) * int(multiplier))
            print(total)
        else:
            count = int(input('How many ' + card + ' do you have? '))
            total = total + (count * cards[card][0])
            print(total)
calculate(cards_set)
