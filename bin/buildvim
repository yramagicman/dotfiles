#!/usr/bin/env zsh
p="$HOME/.vim/config/"
now=$(date)
echo "\" This file is automatically generated from the contents of
\" https://github.com/yramagicman/dotfiles/tree/master/.vim/config\n\n" > ~/Gits/mobileVimrc/.vimrc

/bin/cat $p*".vim" |\
grep -v fugitive |\
sed 's/muttclone/darkblue/' |\
sed 's/"{{{/\"/' |\
sed 's/" {{{/\"/' |\
sed 's/" }}}//' |\
sed 's/" }}}//' |\
sed 's/"}}}//' |\
#egrep -v ^' '\{0,5}\"|\
#remove empty lines
egrep -v ^' '\{0,5}$|\
grep -v ^$ >> ~/Gits/mobileVimrc/.vimrc
cd ~/Gits/mobileVimrc/
git add --all
git commit -q -m "update on $now"
git push -q
