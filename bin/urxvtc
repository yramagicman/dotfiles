#!/bin/sh

if ! type "urxvtc" > /dev/null; then
    xterm -e pacaur -S rxvt-unicode-patched
    urxvtc -tr -sh 8 "$@"
    if [ $? -eq 2 ]; then
       urxvtd -q -o -f
       urxvtc -tr -sh 8 "$@"
    fi
else
    urxvtc -tr -sh 8 "$@"
    if [ $? -eq 2 ]; then
       urxvtd -q -o -f
        urxvtc -tr -sh 8 "$@"
    fi
fi
