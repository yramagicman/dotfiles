#!/usr/bin/env python

import os
import time
import subprocess
import sys
import blessings
watching = sys.argv[1:]
def watchfile(watching):
    mtime = [os.path.getmtime(f) for f in watching]

    def watch():
        nonlocal mtime
        run_tests = [os.path.expanduser('~') + '/bin/manage.py', 'test']
        while True:
            for f in watching:
                if os.path.getmtime(f) not in mtime:
                    local_mtime= [os.path.getmtime(f) for f in watching]
                    mtime = local_mtime
                    return local_mtime
                time.sleep(1)
    print(watch())

watchfile(watching)
