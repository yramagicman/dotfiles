#!/usr/bin/zsh

function my_date () {
    date +"%a %b %d %Y %I:%M"
}
function my_bat() {
    cat /sys/class/power_supply/BAT1/capacity
}

function my_wifi(){
    nmcli | head -n 1 | awk -F ' ' '{print $4}'
}
function wifi_strength() {
    cat /proc/net/wireless | tail -n 1 | awk -F ' ' '{print $3}'
}
function current_window() {
    xpropstr=$(xprop -root _NET_ACTIVE_WINDOW)
    id=("${(@s/ /)xpropstr}")
    $id[-1]
    window=$(xprop -id $id[-1] _NET_WM_NAME)
    wind_name=("${(@s/=/)window}")
    name=$wind_name[-1]
    echo $name[3,-2]

}

function my_load() {
    load=$(uptime)
    average=("${(@s/ /)load}")
    echo $average[9,-1]
}

function updates() {
    updates=$(pacman -Qu | wc -l)
        if [[ $updates -gt 0 ]]
        then
            echo "$updates updates available | "
        fi
}
hn=$(hostname)
if [[ "$hn" == "k-nine" ]];
then
    while; do
        echo "$(updates)Current Window: $(current_window) | $(my_load) | Mail $($HOME/bin/mailmon) | Bat: $(my_bat)% | WIFI: $(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) | $(my_date)"
        sleep 0.01s
    done
else
    while; do
        echo "$(updates)Current Window: $(current_window) | $(my_load) | Mail $($HOME/bin/mailmon) | WIFI: $(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) | $(my_date)"
        sleep 0.01s
    done
fi
