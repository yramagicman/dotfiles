#!/usr/bin/zsh

function my_date () {
    date +"%a %b %d %Y %I:%M"
}
function my_bat() {
    cat /sys/class/power_supply/BAT1/capacity
}

function my_wifi(){
    nmcli | head -n 1 | awk -F ' ' '{print $4}'
}
function wifi_strength() {
    cat /proc/net/wireless | tail -n 1 | awk -F ' ' '{print $3}'
}
while; do
    echo "Bat: $(my_bat)% | WIFI: $(my_wifi), strength $(wifi_strength) | $(my_date)"
    sleep 1s
done
