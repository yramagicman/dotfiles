#!/usr/bin/env python

import os, time, sys, subprocess
file_location = sys.argv[1]
re = sys.argv[2]
file = os.path.expanduser('~') + '/.timestat'
module  = file_location[file_location.find('modules') + len('modules') + 1 :file_location.rindex('/')]
os.chdir(file_location[:file_location.find('modules') + len('modules')])
print module
while True:
    last_modified = time.ctime(os.path.getmtime(file_location))
    f = open(file, 'w')
    f.write(last_modified)
    r = open(file, 'r')
    mod = r.readline()
    if mod != time.ctime(os.path.getmtime(file_location)):
        #if re == '-u':
        #    subprocess.check_output(['drush', 'dis', module, '-y'])
        #    subprocess.check_output(['drush', 'pmu', module, '-y'])
        #subprocess.check_output(['drush', 'cc', 'all' ])
        #if re == '-u':
        #    subprocess.check_output(['drush', 'en', module, '-y'])
        #    subprocess.check_output(['tput', 'bel'])
        print '\n'
        print '\n'
    time.sleep(0.5)
